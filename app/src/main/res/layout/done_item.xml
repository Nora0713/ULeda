<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/getperson"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:background="@drawable/personshape"
        android:text="接单人"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/linearLayout2"
        android:layout_width="53dp"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:text="张无忌"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toRightOf="@+id/getperson"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/linearLayout3"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="9dp"
        android:gravity="center_vertical"
        android:text="★★★★★"
        android:textColor="@color/colorUBlue"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout2"
        tools:layout_editor_absoluteY="25dp" />


    <TextView
        android:id="@+id/linearLayout"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:background="@drawable/task_type_shape"
        android:text="跑腿"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/getperson"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/publisher_name"
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:gravity="center_vertical"
        android:text="赵铁柱"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/publisher_stars"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:gravity="center_vertical"
        android:text="★★★★★"
        android:textColor="@color/colorUBlue"
        app:layout_constraintLeft_toRightOf="@+id/publisher_name"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_conversion_absoluteWidth="62dp"
        tools:layout_conversion_absoluteX="107dp"
        tools:layout_conversion_absoluteY="37dp" />


    <TextView
        android:id="@+id/task_info"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:text="谁顺路的帮我去邮局寄一封信好嘛？"
        android:textColor="@color/colorUDeepGray"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="220dp"
        tools:layout_conversion_absoluteX="5dp"
        tools:layout_conversion_absoluteY="70dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.202"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/task_reward"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="￥1.00"
        android:textColor="@color/colorUMain"
        android:textSize="30sp"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="89dp"
        tools:layout_conversion_absoluteX="230dp"
        tools:layout_conversion_absoluteY="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.2"
        tools:layout_editor_absoluteX="279dp" />


    <TextView
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:text="剩余时间: "
        android:textColor="@color/colorUGray"
        android:textSize="15sp"
        tools:layout_conversion_absoluteHeight="14dp"
        tools:layout_conversion_absoluteWidth="54dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="118dp"
        android:id="@+id/textView42"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/task_info"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:text="1小时43分钟"
        android:textSize="15sp"
        android:textColor="@color/colorUGray"
        android:id="@+id/time_limit"
        tools:layout_conversion_absoluteX="54dp"
        tools:layout_conversion_absoluteY="118dp"
        tools:layout_conversion_absoluteWidth="67dp"
        tools:layout_conversion_absoluteHeight="14dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/from_and_to"
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:text="从  五舍到  邮局"
        android:textColor="@color/colorUGray"
        android:textSize="15sp"
        tools:layout_conversion_absoluteHeight="14dp"
        tools:layout_conversion_absoluteWidth="84dp"
        tools:layout_conversion_absoluteX="131dp"
        tools:layout_conversion_absoluteY="118dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="209dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="133dp"
        tools:layout_conversion_absoluteWidth="307dp"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_editor_absoluteY="133dp"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/pay"
        android:layout_width="98dp"
        android:layout_height="61dp"
        android:textSize="20dp"

        android:text="付款"

        tools:layout_conversion_absoluteX="307dp"
        tools:layout_conversion_absoluteY="133dp"
        tools:layout_conversion_absoluteWidth="77dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/from_and_to"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>