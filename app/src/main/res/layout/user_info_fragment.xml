<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/r"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@drawable/background"
        android:padding="10dp"
        android:scaleType="matrix"
        android:id="@+id/r1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/setting"
            android:id="@+id/setting"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/add2"
            android:id="@+id/add"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="13dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ededed"
        android:id="@+id/r2"
        android:weightSum="5"
        android:layout_height="85dp"
        android:layout_below="@+id/r1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/T1"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="0.60"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:gravity="center_horizontal"
                android:text="已发布"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T2"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="进行中"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T3"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="待评价"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T4"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="已完成"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T5"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="我的订单"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/r3"
        android:layout_below="@+id/r1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="87dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/r2"
            android:id="@+id/my_info"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/info_1"
                android:id="@+id/me"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_margin="5dp" />

            <TextView
                android:text="我的信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="0.95" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/my_money_bag"
            android:layout_height="40dp"
            android:layout_marginTop="47dp"
            android:layout_alignTop="@+id/my_info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/info_2"
                android:id="@+id/packet"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_margin="5dp" />

            <TextView
                android:text="我的积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="27.37"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="U豆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="  190"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="#8bd08b"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/my_qr_code"
            android:layout_below="@+id/my_money_bag"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/info_3"
                android:id="@+id/Qr"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_margin="5dp"  />

            <TextView
                android:text="我的二维码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ask_server"
            android:layout_below="@+id/my_qr_code"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/info_4"
                android:id="@+id/service"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_margin="5dp"  />

            <TextView
                android:text="咨询客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>