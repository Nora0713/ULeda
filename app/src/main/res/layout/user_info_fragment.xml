<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:scaleType="matrix">

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_settings_white_48dp" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/add2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/r1"
        android:background="#ededed"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/T1"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_main"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="0.60"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:gravity="center_horizontal"
                android:text="已发布"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T2"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="进行中"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T3"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="待评价"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T4"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="已完成"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/T5"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.92"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorUInfo"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:gravity="center_horizontal"
                android:text="我的订单"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/r1"
        android:orientation="vertical"
        android:layout_marginTop="87dp"
        android:divider="@drawable/horizontal_divider_inset_left"
        android:showDividers="middle">


        <TextView
            android:id="@+id/my_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_main"
            android:drawableLeft="@drawable/ic_person_grey600_48dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="我的信息" />


        <TextView
            android:id="@+id/my_money_bag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_main"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableLeft="@drawable/ic_credit_grey600_48dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="我的积分" />


        <TextView
            android:id="@+id/my_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_main"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawableLeft="@drawable/ic_camera_grey600_48dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:text="我的二维码" />


        <TextView
            android:id="@+id/ask_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_item_main"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableLeft="@drawable/ic_mood_grey600_48dp"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:paddingLeft="8dp"
            android:text="咨询客服" />
    </LinearLayout>

</RelativeLayout>