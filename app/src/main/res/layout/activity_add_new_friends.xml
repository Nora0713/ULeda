<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:weightSum="1"
        android:background="@color/colorUMain"
        android:layout_height="50dp">

        <Button
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:text="@string/back_str"
            android:background="@color/colorUMain"
            android:gravity="left|center_vertical"
            android:id="@+id/Add_Back"
            android:textColor="@android:color/white"
            android:layout_weight="0.15"
            />


        <TextView
            android:text="添加"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:textSize="24sp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="11dp"
            android:textColor="#ffffff"
            android:id="@+id/textView40"
            android:layout_weight="0.45" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ededed"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ededed"
        android:layout_height="54dp"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:id="@+id/editText_add"
            android:textSize="24sp"
            android:hint="   账号/邮箱地址"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="top"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:background="@color/colorUWhite">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/phone"
            android:id="@+id/imageView7" />

        <Button
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/findByPhoneNumber"
            android:text="添加手机联系人"
            android:textSize="22dp"
            android:background="@color/colorUWhite"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10sp"></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:background="@color/colorUWhite">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/paint"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/findByPaint"
            android:text="扫一扫添加好友"
            android:textSize="22dp"
            android:background="@color/colorUWhite"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stick"
            />
    </LinearLayout>

</LinearLayout>